#!/usr/bin/env bash

if [ "$SUPERVISOR_PHP_USER" != "root" ] && [ "$SUPERVISOR_PHP_USER" != "sail" ]; then
    echo "You should set SUPERVISOR_PHP_USER to either 'sail' or 'root'."
    exit 1
fi

if [ ! -z "$WWWUSER" ]; then
    usermod -u $WWWUSER sail
fi

if [ ! -d /.composer ]; then
    mkdir /.composer
fi

chmod -R ugo+rw /.composer

# ------------------------------------------
# âœ… FIX HOST LOG PERMISSIONS FOR DOCKER-SAIL
# ------------------------------------------
# Ensure Laravel can always write logs even when host restrictive
chmod -R 777 /var/www/html/storage/logs || true
chmod -R 777 /var/www/html/storage/framework || true

# You can also add cache if needed:
# chmod -R 777 /var/www/html/bootstrap/cache || true
# ------------------------------------------

if [ $# -gt 0 ]; then
    if [ "$SUPERVISOR_PHP_USER" = "root" ]; then
        exec "$@"
    else
        exec gosu $WWWUSER "$@"
    fi
else
    exec /usr/bin/supervisord -c /etc/supervisor/conf.d/supervisord.conf
fi
